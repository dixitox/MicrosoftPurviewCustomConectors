# Environment variables template for File Connector Example
# Copy this to .env and fill in your values

# Purview Configuration
PURVIEW_ACCOUNT_NAME=your-purview-account
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_SECRET=your-client-secret

# File System Configuration
ROOT_PATH=./sample_data  # Or network path like \\server\share
RECURSIVE=true
FILE_EXTENSIONS=.csv,.xlsx,.json,.parquet,.txt
COLLECTION_NAME=FileAssets

# Optional: Azure Storage (for Blob/ADLS scanning)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
